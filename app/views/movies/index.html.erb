<h2>All Movies</h2>

<%= form_tag movies_path, :method => :get do %>
  Include:
  <% @all_ratings.each do |rating| %>
    <%= rating %>
    <%= check_box_tag "ratings[#{rating}]" %>
  <% end %>
  <%= submit_tag 'Refresh', :class => 'btn btn-primary' %>
<% end %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>
      <%= link_to "Movie Title", 
          {controller: :movies, action: :index, sort: "movie_title"}, 
          id: "title_header", class: @class_title %>
      </th>
      <th>Rating</th>
      <th>
      <%= link_to "Release Date", 
          {controller: :movies, action: :index, sort: "release_date"}, 
          id: "release_date_header", class: @class_release_date %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
